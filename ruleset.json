{
  "name": "AgentCost CLI Ruleset",
  "version": "1.0.0", 
  "description": "Simple rules for AgentCost CLI open source project",
  "repository": "https://github.com/konstantinos193/agentcost-cli",
  "created": "2026-02-16",
  "rules": {
    "code": {
      "typescript": "required",
      "testing": "required for new features", 
      "documentation": "required for api changes",
      "no_secrets": "strict"
    },
    "contributions": {
      "welcome": ["bug fixes", "new ai integrations", "cli enhancements", "documentation", "performance improvements"],
      "not_welcome": ["breaking changes without version bump", "proprietary code", "unrelated features", "spam"]
    },
    "process": {
      "pr_review": "at least one maintainer",
      "tests_required": true,
      "docs_updated": "for user-facing changes"
    },
    "community": {
      "response_time": {
        "bugs": "48 hours",
        "prs": "72 hours", 
        "questions": "24 hours"
      },
      "behavior": "be respectful and constructive"
    },
    "security": {
      "no_api_keys": "strict",
      "input_validation": "required",
      "responsible_disclosure": "private reporting only"
    },
    "scope": {
      "in_scope": ["ai cost tracking", "cli tools", "team collaboration", "analytics"],
      "out_of_scope": ["general ai tools", "non-cost features", "competing products"]
    }
  },
  "labels": {
    "priority": {
      "critical": ["security", "breaking bugs"],
      "high": ["important features", "major bugs"],
      "medium": ["enhancements", "minor bugs"],
      "low": ["nice-to-have", "documentation"]
    },
    "type": {
      "bug": ["bug", "error"],
      "feature": ["enhancement", "feature-request"],
      "documentation": ["docs", "documentation"],
      "security": ["security", "vulnerability"]
    }
  },
  "contact": {
    "maintainers": ["konstantinos193"],
    "security": "security@agentcost.dev",
    "general": "github@agentcost.dev"
  },
  "links": {
    "contributing": "CONTRIBUTING.md",
    "code_of_conduct": "CODE_OF_CONDUCT.md", 
    "security": "SECURITY.md",
    "license": "LICENSE"
  }
}